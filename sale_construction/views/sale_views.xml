<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- region enable multiple addresses -->
    <record model="sale.config.settings" id="sale_config_settings_sale_construction">
        <field name="group_sale_delivery_address" eval="1"/>
        <field name="group_sale_layout" eval="1"/>
    </record>
    <function model="sale.config.settings" name="execute">
        <!-- ids =  --><value eval="[ref('sale_config_settings_sale_construction')]"/>
        <!-- context --><value eval="{}"/>
    </function>
    <record model="account.config.settings" id="account_config_settings_sale_construction">
        <field name="group_analytic_account_for_sales" eval="1"/>
    </record>
    <function model="account.config.settings" name="execute">
        <!-- ids =  --><value eval="[ref('account_config_settings_sale_construction')]"/>
        <!-- context --><value eval="{}"/>
    </function>
<!-- endregion -->
    <record id="sale_order_form_inherit_sale_construction" model="ir.ui.view">
        <field name="name">sale_construction.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="before">
                <field name="property_owner"/>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="replace">
                <field name="partner_shipping_id" domain="[('parent_id', '=', property_owner)]" groups="sale.group_delivery_invoice_address" context="{'default_type':'delivery'}"/>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="architect" domain="[('category_id', '=', %(sale_construction.res_partner_category_architect)d)]"/>
            </xpath>
            <xpath expr="//page[1]" position="after">
                <page name="resp_entities" string="Responsible Entities">
                    <group>
                        <field name="struct_engineer" domain="[('category_id', '=', %(sale_construction.res_partner_category_structural_engineer)d)]"/>
                        <field name="geo_engineer" domain="[('category_id', '=', %(sale_construction.res_partner_category_geotechnical_engineer)d)]"/>
                        <field name="mep_engineer" domain="[('category_id', '=', %(sale_construction.res_partner_category_mep_engineer)d)]"/>
                        <field name="interior_designer" domain="[('category_id', '=', %(sale_construction.res_partner_category_interior_designer)d)]"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>